function colorCommunityBoxValues(){$(".community-box-value").each(function(){var n=$(this),t=$(this).html();typeof t!="undefined"&&(n.removeClass("rising"),n.removeClass("falling"),t.indexOf("-")!=-1?n.addClass("falling"):n.addClass("rising"))})}function rotateCommunityBoxMessages(){var n,t;doRotateElements==!0&&(lastAddedMessageIndex++,lastAddedMessageIndex>=communityBoxMessagesCount&&(lastAddedMessageIndex=0),lastAddedMessageIndex<communityBoxMessagesCount&&(n=$(".community-box-entry-container",communityBoxElement).last(),typeof n!="undefined"&&(t=$(communityBoxMessages[lastAddedMessageIndex]).clone(),$(n).remove(),$(t).prependTo(communityBoxElement).fadeTo(0,0).fadeTo(2e3,1))))}function initCommunityBoxRotator(n){if(communityBoxMessages=$("#communityBoxMessageContainer .community-box-entry-container"),communityBoxElement=$("#community-box-entries"),communityBoxMessages.length>0){if(communityBoxMessagesCount=communityBoxMessages.length,!communityBoxTimer&&typeof communityBoxElement!="undefined"){for(i=0;i<n;i++)$(communityBoxMessages[i]).clone().prependTo(communityBoxElement),lastAddedMessageIndex=i;communityBoxTimer=1;setInterval("rotateCommunityBoxMessages()",5e3)}}else typeof communityBoxElement!="undefined"&&communityBoxElement.html("News Feed vorÃ¼bergehend deaktiviert.")}var communityBoxMessages,lastAddedMessageIndex=-1,communityBoxMessagesCount=0,communityBoxTimer=0,communityBoxElement,doRotateElements=!0;$(document).ready(function(){var n,t;$("#communityBoxMessageContainer").hide();(typeof communityBoxMessages=="undefined"||communityBoxMessages.length==0)&&(n=$("#community-box").attr("data-count"),n!=null&&n!=""?initCommunityBoxRotator(parseInt(n)):initCommunityBoxRotator(5));t=$("#community-box-entries");t.mouseenter(function(){doRotateElements=!1});t.mouseleave(function(){doRotateElements=!0});colorCommunityBoxValues()})